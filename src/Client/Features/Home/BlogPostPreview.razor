@using Markdig
@inherits BlogPostPreviewModel

<div class="post-preview">
    <NavLink href="@($"viewpost/{blogPost.Id}")">
        <h2 class="post-title">
            @blogPost.Title
        </h2>
        <h3 class="post-subtitle">
            @(((MarkupString)Markdown.ToHtml(blogPost.PostSummary)))
        </h3>
    </NavLink>
    <p class="post-meta">
        <NavLink href="/">@blogPost.Author</NavLink>
        , @blogPost.Posted.ToShortDateString()
    </p>
</div>